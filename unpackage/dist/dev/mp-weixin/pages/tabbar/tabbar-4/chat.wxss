.foot {
  position: fixed;
  width: 100%;
  height: 90rpx;
  min-height: 90rpx;
  left: 0px;
  bottom: 0px;
  overflow: hidden;
}
.foot .expression {
  width: 96%;
  height: 300rpx;
  border: solid 2rpx #bbb;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 90rpx;
  left: 14rpx;
  z-index: 10000;
}
.foot .expression .xw-faceEmoji {
    width: 80rpx;
    height: 80rpx;
    display: inline-block;
    margin-top: 10rpx;
}
.foot .expression .xw-faceEmoji image {
      width: 60rpx;
      height: 60rpx;
}
.slide-fade-enter-active {
  -webkit-transition: all 0.3s ease;
  -o-transition: all 0.3s ease;
  transition: all 0.3s ease;
}
.slide-fade-leave-active {
  -webkit-transition: all 0.3s cubic-bezier(1, 0.5, 0.8, 1);
  -o-transition: all 0.3s cubic-bezier(1, 0.5, 0.8, 1);
  transition: all 0.3s cubic-bezier(1, 0.5, 0.8, 1);
}
.slide-fade-enter {
  -webkit-transform: translateY(-10rpx);
      -ms-transform: translateY(-10rpx);
          transform: translateY(-10rpx);
  opacity: 0;
}
.slide-fade-leave-to {
  -webkit-transform: translateY(10rpx);
      -ms-transform: translateY(10rpx);
          transform: translateY(10rpx);
  opacity: 0;
}

